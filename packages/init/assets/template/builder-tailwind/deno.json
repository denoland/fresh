{
  "nodeModulesDir": "manual",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "fresh": "jsr:@fresh/core@^__FRESH_VERSION__",
    "preact": "npm:preact@^__PREACT_VERSION__",
    "@preact/signals": "npm:@preact/signals@^__PREACT_SIGNALS_VERSION__",
    "tailwindcss": "npm:tailwindcss@^__TAILWINDCSS_VERSION__",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^__FRESH_TAILWIND_VERSION__",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^__TAILWINDCSS_POSTCSS_VERSION__",
    "postcss": "npm:postcss@^__POSTCSS_VERSION__"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ]
  }
}
